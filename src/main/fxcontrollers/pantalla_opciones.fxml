<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" style="-fx-min-width: 640; -fx-min-height: 360;
-fx-background-image: url(/main/images/elegant_bg.png); -fx-background-size: cover" styleClass="label-options"
          stylesheets="@styles.css" vgap="10" xmlns="http://javafx.com/javafx/11.0.1"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.fxcontrollers.OptionsScreenController">

   <Label styleClass="label-options" text="N. de jugadores" />
   <HBox styleClass="button-options" GridPane.columnIndex="1">
      <fx:define>
         <ToggleGroup fx:id="numPlayersGroup" />
      </fx:define>
      <ToggleButton toggleGroup="$numPlayersGroup" maxWidth="Infinity" mnemonicParsing="false" text="1" HBox.hgrow="ALWAYS" />
      <ToggleButton toggleGroup="$numPlayersGroup" maxWidth="Infinity" mnemonicParsing="false" text="2" HBox.hgrow="ALWAYS" />
      <ToggleButton toggleGroup="$numPlayersGroup" maxWidth="Infinity" mnemonicParsing="false" text="3" HBox.hgrow="ALWAYS" />
      <ToggleButton toggleGroup="$numPlayersGroup" maxWidth="Infinity" mnemonicParsing="false" text="4" HBox.hgrow="ALWAYS" />
      <ToggleButton toggleGroup="$numPlayersGroup" maxWidth="Infinity" mnemonicParsing="false" text="5" HBox.hgrow="ALWAYS" />
      <ToggleButton toggleGroup="$numPlayersGroup" maxWidth="Infinity" mnemonicParsing="false" text="6" HBox.hgrow="ALWAYS" />
      <ToggleButton toggleGroup="$numPlayersGroup" maxWidth="Infinity" mnemonicParsing="false" text="7" HBox.hgrow="ALWAYS" />
      <ToggleButton toggleGroup="$numPlayersGroup" maxWidth="Infinity" mnemonicParsing="false" text="8" HBox.hgrow="ALWAYS" />
   </HBox>

   <Label styleClass="label-options" text="Juego" GridPane.rowIndex="1" />
   <HBox styleClass="button-options" GridPane.columnIndex="1" GridPane.rowIndex="1">
      <fx:define>
         <ToggleGroup fx:id="gameGroup" />
      </fx:define>
      <ToggleButton toggleGroup="$gameGroup" maxWidth="Infinity" mnemonicParsing="false" text="X01" HBox.hgrow="ALWAYS" />
      <ToggleButton toggleGroup="$gameGroup" maxWidth="Infinity" mnemonicParsing="false" text="Cricket" HBox.hgrow="ALWAYS" />
   </HBox>

   <Label styleClass="label-options" text="Modo X01" GridPane.rowIndex="2" />
   <HBox styleClass="button-options" GridPane.columnIndex="1" GridPane.rowIndex="2">
      <fx:define>
         <ToggleGroup fx:id="x01ModeGroup" />
      </fx:define>
      <ToggleButton toggleGroup="$x01ModeGroup" maxWidth="Infinity" mnemonicParsing="false" text="301" HBox.hgrow="ALWAYS" />
      <ToggleButton toggleGroup="$x01ModeGroup" maxWidth="Infinity" mnemonicParsing="false" text="501" HBox.hgrow="ALWAYS" />
      <ToggleButton toggleGroup="$x01ModeGroup" maxWidth="Infinity" mnemonicParsing="false" text="701" HBox.hgrow="ALWAYS" />
   </HBox>

   <Label styleClass="label-options" text="Rondas" GridPane.rowIndex="3" />
   <HBox styleClass="button-options" GridPane.columnIndex="1" GridPane.rowIndex="3">
      <fx:define>
         <ToggleGroup fx:id="roundsGroup" />
      </fx:define>
      <ToggleButton toggleGroup="$roundsGroup" maxWidth="Infinity" mnemonicParsing="false" text="10" HBox.hgrow="ALWAYS" />
      <ToggleButton toggleGroup="$roundsGroup" maxWidth="Infinity" mnemonicParsing="false" text="20" HBox.hgrow="ALWAYS" />
   </HBox>

   <Label styleClass="label-options" text="Modo" GridPane.rowIndex="4" />
   <HBox styleClass="button-options" GridPane.columnIndex="1" GridPane.rowIndex="4">
      <fx:define>
         <ToggleGroup fx:id="modeGroup" />
      </fx:define>
      <ToggleButton toggleGroup="$modeGroup" maxWidth="Infinity" mnemonicParsing="false" text="Single In Single Out" HBox.hgrow="ALWAYS" />
      <ToggleButton toggleGroup="$modeGroup" maxWidth="Infinity" mnemonicParsing="false" text="Double in Double Out" HBox.hgrow="ALWAYS" />
   </HBox>

   <HBox GridPane.columnSpan="2" GridPane.rowIndex="5">
      <Button fx:id="btn_opciones_atras" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleButtonAction" text="AtrÃ¡s" HBox.hgrow="ALWAYS" />
      <Button fx:id="btn_opciones_continuar" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleButtonAction" text="Continuar" HBox.hgrow="ALWAYS" />
   </HBox>

</GridPane>
