<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" spacing="10"
      style="-fx-background-image: url(org/brontapps/inmensusdartsfx/images/elegant_bg.png); -fx-background-size: cover"
      xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1" stylesheets="@styles.css"
      fx:controller="org.brontapps.inmensusdartsfx.fxcontrollers.NamesScreenController">

   <HBox maxWidth="Infinity" spacing="20.0" GridPane.hgrow="ALWAYS">
      <VBox maxWidth="Infinity" spacing="6" HBox.hgrow="ALWAYS">
         <HBox GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="boxNombres1">
            <Label styleClass="label-options" text="Jugador 1" GridPane.rowIndex="1" />
            <TextField styleClass="text-options" fx:id="txtNames1" promptText="%lbl.name1" HBox.hgrow="ALWAYS"/>
         </HBox>
         <HBox GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="boxNombres2">
            <Label styleClass="label-options" text="Jugador 2" GridPane.rowIndex="2" />
            <TextField styleClass="text-options" fx:id="txtNames2" promptText="%lbl.name2" HBox.hgrow="ALWAYS"/>
         </HBox>
         <HBox GridPane.columnIndex="1" GridPane.rowIndex="3" fx:id="boxNombres3">
            <Label styleClass="label-options" text="Jugador 3" GridPane.rowIndex="3" />
            <TextField styleClass="text-options" fx:id="txtNames3" promptText="%lbl.name3" HBox.hgrow="ALWAYS"/>
         </HBox>
         <HBox GridPane.columnIndex="1" GridPane.rowIndex="4" fx:id="boxNombres4">
            <Label styleClass="label-options" text="Jugador 4" GridPane.rowIndex="4" />
            <TextField styleClass="text-options" fx:id="txtNames4" promptText="%lbl.name4" HBox.hgrow="ALWAYS"/>
         </HBox>
      </VBox>
      <VBox maxWidth="Infinity" spacing="6" HBox.hgrow="ALWAYS" fx:id="moreNamesBox">
         <HBox GridPane.columnIndex="2" GridPane.rowIndex="1" fx:id="boxNombres5">
            <Label styleClass="label-options" text="Jugador 5" GridPane.rowIndex="1" />
            <TextField styleClass="text-options" fx:id="txtNames5" promptText="%lbl.name5" HBox.hgrow="ALWAYS"/>
         </HBox>
         <HBox GridPane.columnIndex="2" GridPane.rowIndex="2" fx:id="boxNombres6">
            <Label styleClass="label-options" text="Jugador 6" GridPane.rowIndex="1" />
            <TextField styleClass="text-options" fx:id="txtNames6" promptText="%lbl.name6" HBox.hgrow="ALWAYS"/>
         </HBox>
         <HBox GridPane.columnIndex="2" GridPane.rowIndex="3" fx:id="boxNombres7">
            <Label styleClass="label-options" text="Jugador 7" GridPane.rowIndex="1" />
            <TextField styleClass="text-options" fx:id="txtNames7" promptText="%lbl.name7" HBox.hgrow="ALWAYS"/>
         </HBox>
         <HBox GridPane.columnIndex="2" GridPane.rowIndex="4" fx:id="boxNombres8">
            <Label styleClass="label-options" text="Jugador 8" GridPane.rowIndex="1" />
            <TextField styleClass="text-options" fx:id="txtNames8" promptText="%lbl.name8" HBox.hgrow="ALWAYS"/>
         </HBox>
      </VBox>
      <padding>
         <Insets left="50.0" right="50.0" />
      </padding>
   </HBox>

   <HBox maxWidth="400" spacing="10">
      <Button fx:id="btnNamesBack" styleClass="nav-bar-button" maxWidth="Infinity" mnemonicParsing="false"
              onAction="#handleButtonAction" text="%btn_back" HBox.hgrow="ALWAYS" />
      <Button fx:id="btnNamesNext" styleClass="nav-bar-button" maxWidth="Infinity" mnemonicParsing="false"
              onAction="#handleButtonAction" text="%btn_continue" HBox.hgrow="ALWAYS" />
   </HBox>
</VBox>
